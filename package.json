{
	"name": "localmind",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "npm run copy-wasm && vite dev",
		"build": "npm run copy-wasm && PUBLIC_DISABLE_OPFS=false vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync && husky",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"lint:fix": "prettier --write . && eslint . --fix",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"checks": "npm run format && npm run lint && npm run check",
		"copy-wasm": "node scripts/copy-wasm-files.js",
		"ai-digest": "npx ai-digest --ignore-file .cocoignore --minify-file .cocominify"
	},
	"dependencies": {
		"express": "^5.1.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.2",
		"@eslint/js": "^9.34.0",
		"@fontsource/bebas-neue": "^5.2.6",
		"@fontsource/space-grotesk": "^5.2.8",
		"@huggingface/jinja": "^0.5.1",
		"@huggingface/transformers": "^3.7.2",
		"@iconify-json/logos": "^1.2.9",
		"@iconify-json/lucide": "^1.2.65",
		"@sveltejs/adapter-node": "^5.3.1",
		"@sveltejs/adapter-static": "^3.0.9",
		"@sveltejs/kit": "^2.37.0",
		"@transcribe/transcriber": "^3.0.0",
		"@webgpu/types": "^0.1.64",
		"@wllama/wllama": "github:khromov/wllama#cache-reset-fix-2",
		"@wuchale/svelte": "^0.14.0",
		"@wuchale/vite-plugin": "^0.14.1",
		"eslint": "^9.34.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.11.0",
		"globals": "^16.3.0",
		"husky": "^9.1.7",
		"js-tiktoken": "^1.0.21",
		"jszip": "^3.10.1",
		"onnxruntime-web": "^1.22.0",
		"phonemizer": "https://github.com/khromov/phonemizer.js/archive/refs/heads/fix-safari.tar.gz",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"subsrt-ts": "^2.1.2",
		"svelte": "^5.38.6",
		"svelte-check": "^4.3.1",
		"svelte-persisted-store": "^0.12.0",
		"svelte-sonner": "^1.0.5",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.41.0",
		"unplugin-icons": "^22.2.0",
		"vite": "^7.1.3",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^3.2.4"
	}
}
